<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="410dp"
            android:layout_height="85dp"
            android:alpha="1"
            android:background="@color/teal_700"
            android:gravity="center"
            android:text="@string/coping_skills"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="410dp"
            android:layout_height="103dp"
            android:alpha="1"
            android:background="@color/material_on_surface_stroke"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/emotion_focused_skills"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b7"
            android:layout_width="410dp"
            android:layout_height="90dp"
            android:alpha="1"
            android:background="@color/material_on_surface_stroke"
            android:gravity="center"
            android:text="@string/problem_focused_skills"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="410dp"
            android:layout_height="108dp"
            android:alpha="1"
            android:background="@color/material_on_surface_stroke"
            android:gravity="center"
            android:text="@string/some_healthy_coping_skills"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="410dp"
            android:layout_height="217dp"
            android:alpha="1"
            android:background="@color/material_on_surface_stroke"
            android:gravity="center"
            android:text="@string/just_click_here_and_start_living_life_to_the_fullest"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

</ScrollView>