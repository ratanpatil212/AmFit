<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".contents">



    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/dash"
        android:fontFamily="@font/aldrich"
        android:gravity="center"
        android:text="Dashboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.826"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.855" />

    <Button
        android:id="@+id/amfit_specials"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/boogaloo"
        android:text="@string/amfit_specials"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/muscle_buildup"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/boogaloo"
        android:text="Muscle Buildup"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:backgroundTint="#4A5ECA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amfit_specials"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364" />

    <Button
        android:id="@+id/diet"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/boogaloo"
        android:text="Diet"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565"
        tools:layout_editor_absoluteX="36dp" />

    <Button
        android:id="@+id/mental_health"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/boogaloo"
        android:text="Mental Health"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:backgroundTint="#E1D149"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/diet"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565" />

    <Button
        android:id="@+id/covid"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/boogaloo"
        android:text="COVID-19"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:backgroundTint="#4A5ECA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/explore"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/boogaloo"
        android:text="Explore"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/covid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />
</androidx.constraintlayout.widget.ConstraintLayout>